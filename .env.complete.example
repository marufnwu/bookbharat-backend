# BookBharat E-commerce System - Complete Environment Configuration

APP_NAME="BookBharat"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Application Specific
DEFAULT_CURRENCY=INR
DEFAULT_LOCALE=en
SUPPORT_EMAIL=support@bookbharat.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=sikderithub_bbv2
DB_USERNAME=sikderithub_common
DB_PASSWORD=LetMeDown

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=bookbharat_cache
CACHE_DEFAULT_TTL=3600
CACHE_TAGS_ENABLED=true

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_DEFAULT=default
EMAIL_QUEUE=emails
PAYMENT_QUEUE=payments

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@bookbharat.com"
MAIL_FROM_NAME="${APP_NAME}"

# Email Templates
EMAIL_TEMPLATES_ENABLED=true

# AWS Configuration (for SES, S3, etc.)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Payment Gateway Configuration

# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret
RAZORPAY_LOGO_URL=https://yourdomain.com/logo.png
RAZORPAY_THEME_COLOR=#2563eb

# Cashfree
CASHFREE_CLIENT_ID=your_cashfree_client_id
CASHFREE_CLIENT_SECRET=your_cashfree_client_secret
CASHFREE_ENVIRONMENT=TEST

# SMS Configuration
SMS_PROVIDER=twilio

# Twilio SMS
TWILIO_SID=your_twilio_sid
TWILIO_TOKEN=your_twilio_token
TWILIO_FROM=+1234567890

# MSG91 SMS
MSG91_AUTH_KEY=your_msg91_auth_key
MSG91_TEMPLATE_ID=your_template_id

# Shipping Configuration
DEFAULT_SHIPPING_CARRIER=bluedart

# Blue Dart
BLUEDART_API_KEY=your_bluedart_api_key
BLUEDART_LICENSE_KEY=your_bluedart_license_key
BLUEDART_ENVIRONMENT=test

# DTDC
DTDC_API_KEY=your_dtdc_api_key
DTDC_CUSTOMER_CODE=your_dtdc_customer_code

# Delhivery
DELHIVERY_API_KEY=your_delhivery_api_key
DELHIVERY_ENVIRONMENT=test

# File Storage
INVOICES_DISK=public
RETURNS_DISK=public
PRODUCTS_DISK=public
MAX_FILE_SIZE=2048

# Business Configuration
RETURN_WINDOW_DAYS=30
FREE_SHIPPING_THRESHOLD=500
MAX_CART_ITEMS=50
MAX_WISHLIST_ITEMS=100
DEFAULT_TAX_RATE=18

# Search Configuration
SEARCH_PROVIDER=elasticsearch

# Elasticsearch
ELASTICSEARCH_HOST=localhost:9200
ELASTICSEARCH_INDEX_PREFIX=bookbharat_

# Algolia
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_SECRET=your_algolia_secret
ALGOLIA_INDEX_NAME=products

# Social Media Integration
# Facebook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=http://localhost:8000/auth/facebook/callback

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
FACEBOOK_PIXEL_ID=your_pixel_id
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# API Configuration
API_RATE_LIMIT=60,1
API_DEFAULT_PER_PAGE=15
API_MAX_PER_PAGE=100
API_VERSION=v1

# Security Configuration
PASSWORD_RESET_EXPIRE_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
ENABLE_2FA=false

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Broadcasting
BROADCAST_CONNECTION=log
BROADCAST_DRIVER=log

# Filesystem
FILESYSTEM_DISK=local

# Additional Services

# Pusher (for real-time notifications)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Scout (for search)
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_KEY=

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1,bookbharat.local

# Rate Limiting
THROTTLE_REQUESTS=60
THROTTLE_REQUESTS_DECAY_MINUTES=1

# Development/Testing Configuration
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true

# Backup Configuration (for database backups)
BACKUP_DISK=s3
BACKUP_NOTIFICATION_MAIL_TO=admin@bookbharat.com

# Maintenance Mode
MAINTENANCE_DRIVER=file
MAINTENANCE_SECRET=your_maintenance_secret

# Health Check
HEALTH_CHECK_URL_TIMEOUT=10

# Image Optimization
IMAGE_DRIVER=gd
IMAGE_QUALITY=90

# PWA Configuration
PWA_NAME="${APP_NAME}"
PWA_SHORT_NAME="BookBharat"
PWA_DESCRIPTION="Your favorite online bookstore"
PWA_BACKGROUND_COLOR="#ffffff"
PWA_THEME_COLOR="#2563eb"
