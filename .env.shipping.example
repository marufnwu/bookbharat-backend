# ========================================
# MULTI-CARRIER SHIPPING CONFIGURATION
# ========================================

# Default Carrier
DEFAULT_SHIPPING_CARRIER=delhivery

# ========================================
# DELHIVERY CONFIGURATION
# ========================================
DELHIVERY_ENABLED=true
DELHIVERY_MODE=test

# Test Credentials
DELHIVERY_TEST_API_KEY=your_delhivery_test_api_key_here
DELHIVERY_TEST_CLIENT_NAME=your_test_client_name

# Live Credentials
DELHIVERY_LIVE_API_KEY=your_delhivery_live_api_key_here
DELHIVERY_LIVE_CLIENT_NAME=your_live_client_name

# Webhook URL (optional - will use default if not set)
DELHIVERY_WEBHOOK_URL=/api/v1/shipping/webhook/delhivery

# ========================================
# BLUEDART CONFIGURATION
# ========================================
BLUEDART_ENABLED=false
BLUEDART_MODE=test

# Test Credentials
BLUEDART_TEST_LICENSE_KEY=your_bluedart_test_license_key
BLUEDART_TEST_LOGIN_ID=your_bluedart_test_login_id

# Live Credentials
BLUEDART_LIVE_LICENSE_KEY=your_bluedart_live_license_key
BLUEDART_LIVE_LOGIN_ID=your_bluedart_live_login_id

# ========================================
# XPRESSBEES CONFIGURATION
# ========================================
XPRESSBEES_ENABLED=false
XPRESSBEES_MODE=test

# Test Credentials
XPRESSBEES_TEST_EMAIL=your_test_email@example.com
XPRESSBEES_TEST_PASSWORD=your_test_password
XPRESSBEES_TEST_ACCOUNT_ID=your_test_account_id

# Live Credentials
XPRESSBEES_LIVE_EMAIL=your_live_email@example.com
XPRESSBEES_LIVE_PASSWORD=your_live_password
XPRESSBEES_LIVE_ACCOUNT_ID=your_live_account_id

# ========================================
# DTDC CONFIGURATION
# ========================================
DTDC_ENABLED=false
DTDC_MODE=test

# Test Credentials
DTDC_TEST_ACCESS_TOKEN=your_dtdc_test_access_token
DTDC_TEST_CUSTOMER_CODE=your_dtdc_test_customer_code

# Live Credentials
DTDC_LIVE_ACCESS_TOKEN=your_dtdc_live_access_token
DTDC_LIVE_CUSTOMER_CODE=your_dtdc_live_customer_code

# ========================================
# ECOM EXPRESS CONFIGURATION
# ========================================
ECOM_EXPRESS_ENABLED=false
ECOM_EXPRESS_MODE=test

# Test Credentials
ECOM_EXPRESS_TEST_USERNAME=your_ecom_test_username
ECOM_EXPRESS_TEST_PASSWORD=your_ecom_test_password

# Live Credentials
ECOM_EXPRESS_LIVE_USERNAME=your_ecom_live_username
ECOM_EXPRESS_LIVE_PASSWORD=your_ecom_live_password

# ========================================
# SHADOWFAX CONFIGURATION
# ========================================
SHADOWFAX_ENABLED=false
SHADOWFAX_MODE=test

# Test Credentials
SHADOWFAX_TEST_API_TOKEN=your_shadowfax_test_api_token

# Live Credentials
SHADOWFAX_LIVE_API_TOKEN=your_shadowfax_live_api_token

# ========================================
# SHIPROCKET CONFIGURATION
# ========================================
SHIPROCKET_ENABLED=false
SHIPROCKET_MODE=live  # Shiprocket doesn't have test mode

# Live Credentials (Shiprocket only has live mode)
SHIPROCKET_EMAIL=your_shiprocket_email@example.com
SHIPROCKET_PASSWORD=your_shiprocket_password

# ========================================
# PICKUP LOCATION CONFIGURATION
# ========================================
PICKUP_LOCATION_NAME="BookBharat Warehouse"
PICKUP_ADDRESS="123, Industrial Area"
PICKUP_CITY="Delhi"
PICKUP_STATE="Delhi"
PICKUP_COUNTRY="India"
PICKUP_PINCODE="110001"
PICKUP_PHONE="9999999999"
PICKUP_EMAIL="warehouse@bookbharat.com"

# ========================================
# RETURN ADDRESS CONFIGURATION
# (If different from pickup location)
# ========================================
RETURN_LOCATION_NAME="BookBharat Returns"
RETURN_ADDRESS="456, Return Processing Center"
RETURN_CITY="Delhi"
RETURN_STATE="Delhi"
RETURN_COUNTRY="India"
RETURN_PINCODE="110002"
RETURN_PHONE="9999999998"
RETURN_EMAIL="returns@bookbharat.com"

# ========================================
# SHIPPING RULES CONFIGURATION
# ========================================
AUTO_SELECT_CARRIER=true
CARRIER_SELECTION_PRIORITY=cost  # Options: cost, speed, rating
MAX_SHIPPING_RETRY=3
ENABLE_SHIPPING_INSURANCE=true
INSURANCE_THRESHOLD=5000
ENABLE_REAL_TIME_TRACKING=true

# ========================================
# NOTES FOR SETUP
# ========================================
# 1. Copy this file to .env and fill in your actual credentials
# 2. Enable only the carriers you have accounts with
# 3. Start with test mode for initial testing
# 4. Switch to live mode only after testing is complete
# 5. Ensure webhook URLs are accessible from the internet
# 6. Configure your pickup and return addresses accurately
# 7. Run 'php artisan db:seed --class=ShippingCarrierSeeder' to sync carriers
# ========================================